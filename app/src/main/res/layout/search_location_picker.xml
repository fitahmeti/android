<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <merge>

        <LinearLayout
            android:id="@+id/frg_search_pick_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@null"
                app:srcCompat="@drawable/ic_location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drw_round_corner_gray"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp">

                <TextView
                    style="@style/regular_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fromwithoutcolon" />

                <TextView
                    android:id="@+id/frg_search_pick_location_text"
                    style="@style/regular_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="@string/current_location"
                    android:textColor="@color/gray_light" />

                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_location_searching" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@null"
                app:srcCompat="@drawable/ic_location" />

            <LinearLayout
                android:id="@+id/frg_search_drop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drw_round_corner_gray"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_4sdp">

                <TextView
                    style="@style/regular_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/towithoutcolon" />

                <TextView
                    android:id="@+id/frg_search_drop_location_text"
                    style="@style/regular_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_8sdp"
                    android:text="@string/current_location"
                    android:textColor="@color/gray_light" />

                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_location_searching" />

            </LinearLayout>

        </LinearLayout>

    </merge>

</layout>