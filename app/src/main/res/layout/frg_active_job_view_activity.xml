<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/frg_active_job_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:contentPadding="@dimen/_4sdp">

            <TextView
                android:id="@+id/frg_active_job_no_data_found"
                style="@style/regular_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="No swishr found"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="@dimen/_18sdp"
                android:layout_weight="1"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/frg_active_job_main_data_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_8sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/frg_active_job_sender_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="@color/gray_light"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/frg_active_job_helping_text"
                    style="@style/regular_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/frg_active_job_view_activity"
            style="@style/Button"
            android:layout_gravity="center_horizontal"
            android:text="@string/view_activity" />

    </LinearLayout>

</layout>