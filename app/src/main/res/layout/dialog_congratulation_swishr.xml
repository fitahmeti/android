<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_horizontal"
            android:padding="@dimen/_8sdp"
            android:text="@string/congratulations"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_congratulation_upper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/_12sdp"
            android:text="@string/you_have_accpted_as_your_swishr_for_this_item"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            app:cardBackgroundColor="@color/gray_light_more"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dialog_congratulation_swishr_image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_toLeftOf="@+id/dialog_congratulation_swishr_name"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="@color/gray_dark"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/dialog_congratulation_swishr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="14sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/dialog_congratulation_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/_12sdp"
            android:text="@string/you_can_view_item_activity_and_contact_on_your_item_page"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_congratulation_cancel"
                style="@style/Button"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/dialog_congratulation_accept"
                style="@style/Button"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="@string/view_activity" />

        </LinearLayout>

    </LinearLayout>

</layout>